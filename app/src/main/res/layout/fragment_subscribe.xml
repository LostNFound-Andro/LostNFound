<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sel.lostfound.SubscribeFragment" android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myspinner"

        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/subscribe_button"
        android:layout_toStartOf="@+id/subscribe_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subscribe"
        android:id="@+id/subscribe_button"
        android:layout_alignTop="@+id/myspinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SUBSCRIBED"
        android:id="@+id/textView"
        android:layout_below="@+id/myspinner"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
